<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.sw.swsample.TargetUrlActivity">


    <CheckBox
        android:id="@+id/item_checkbox_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/item_textview_url"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:gravity="center_vertical"

        android:layout_marginLeft="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/item_checkbox_select"
        app:layout_constraintLeft_toRightOf="@+id/item_checkbox_select"
        app:layout_constraintTop_toTopOf="@+id/item_checkbox_select" />
</android.support.constraint.ConstraintLayout>